generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model AppUpdate {
  id        Int      @id @default(autoincrement())
  event     String
  version   String
  platform  String
  arch      String
  timestamp DateTime @default(now())
  hostname  String?
  createdAt DateTime @default(now())

  @@map("app_updates")
}
